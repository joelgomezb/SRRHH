[% IF template.name.match('\.(css|js|txt)');
     debug("Passing page through as text: $template.name");
     content;
   ELSE;
      IF wrapper;
        IF ( wrapper == 'layouttexto' );
          content WRAPPER "site/$wrapper";
        ELSIF (wrapper == 'pdf');
          debug("Applying wrapper $wrapper to $template.name\n");
          content WRAPPER site/htmlbasico + "site/$wrapper";
        ELSIF (wrapper == 'xml');
          debug("Applying wrapper $wrapper to $template.name\n");
          content WRAPPER "site/$wrapper";
        ELSE;
          debug("Applying wrapper $wrapper to $template.name\n");
          content WRAPPER site/html + "site/$wrapper";
        END;
      ELSE;
        debug("Applying HTML page layout wrappers to $template.name\n");
        content WRAPPER site/html + site/layout;
      END;
   END;
-%]