[% USE date %]
<table width="100%">
  <tr>
    <table width="100%">  
        <tr>
        <td><img width="100%" src="[% Catalyst.path_to('/root/static/images/cintillo_confidencial.png') %]" /></td>
        </tr>
      </table>
  </tr>  
